    "@ethereumjs/common": "^3.0.1",
    "@ethereumjs/tx": "^4.0.1",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@flashbots/ethers-provider-bundle": "^0.5.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@poanet/solidity-flattener": "^3.0.8",
